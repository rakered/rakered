{
  "name": "@rakered/mongo",
  "version": "1.0.0",
  "description": "A better mongodb driver",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "license": "AGPL-3.0 OR COMMERCIAL",
  "author": "Stephan Meijer <stephan@meijer.ws>",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rakered/rakered.git"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf \"./lib\" \"*.tsbuildinfo\"",
    "prepare": "npm run build",
    "lint": "tsc --noEmit && eslint 'src/**/*.ts' --quiet --fix",
    "test": "jest --coverage --runInBand ./src",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest --runInBand",
    "ci:lint": "eslint -c ../../.eslintrc.js",
    "ci:tsc": "tsc --noEmit --project ./tsconfig.json"
  },
  "files": [
    "src",
    "lib"
  ],
  "keywords": [],
  "dependencies": {
    "mongodb": "^3.6.3",
    "picoid": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/mongodb": "^3.6.3",
    "@types/node": "^14.14.21",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-partial": "^1.0.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
