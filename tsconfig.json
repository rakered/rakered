{
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "typings", "global.d.ts"],
  "exclude": ["node_modules", "test/**"],
  "references": [
    { "path": "packages/accounts" },
    { "path": "packages/email" },
    { "path": "packages/errors" },
    { "path": "packages/hash" },
    { "path": "packages/mongo" }
  ]
}
