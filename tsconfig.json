{
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "declaration": true,
    "baseUrl": "./packages",
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "include": [
    "src",
    "typings",
    "global.d.ts",
  ],
  "exclude": [
    "node_modules",
    "test/**"
  ],
  "references": [
  ]
}
